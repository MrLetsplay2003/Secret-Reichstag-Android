<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Caching">

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="cache_assets"
            android:title="Cache assets to storage" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Server">

        <EditTextPreference
            android:defaultValue="sr.graphite-official.com"
            android:key="server_host"
            android:title="Server Host" />

        <EditTextPreference
            android:defaultValue="23456"
            android:key="server_port"
            android:title="Server Port" />
    </PreferenceCategory>
</PreferenceScreen>